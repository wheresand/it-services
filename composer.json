{
    "name": "app/it-services",
    "description": "A brief description of your project",
    "type": "project",
    "require": {
        "php": "^7.4|^8.0",
        "vlucas/phpdotenv": "^5.4",     
        "monolog/monolog": "^2.5",      
        "psr/log": "^1.1"                 
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"        
    },
    "autoload": {
        "psr-4": {
            "App\\class\\": "app/class/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Dotenv\\Dotenv::createImmutable(__DIR__)->load()" 
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
